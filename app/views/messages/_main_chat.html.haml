.chat-main
  .RightHeader
    %ul.RightHeader__Group
      %li.RightHeader__Group__Groupname
        = @group.name
      %li.RightHeader__Group__member
        Member:
        - @group.users.each do |user|
          = user.name
    .form
      = link_to edit_group_path(@group), class: 'editBtn' do
        %input.edit{"name": "edit", "type": "submit", "value": "Edit"}


  .MessageField
    = render @messages

  .Footer
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__contents
        = f.text_field :content, class: 'contents', placeholder: 'type a message'
        .Form__icon_Photo
          = f.label :image, class: 'input-box__image' do
            = icon('fas', 'image',class: "input-box__image__icon")
            = f.file_field :image, class: 'hidden'

      .icon_Send
        = f.submit 'Send', class: 'submit__btn'
      

